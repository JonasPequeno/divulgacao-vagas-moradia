<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Sobre o ImÃ³vel"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoDescricaoImovel"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Sobre a Vaga"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoDescricaoVaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor da vaga"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contato"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textViesw6s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rua"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/campoRua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />


            <TextView
                android:id="@+id/textViesw8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imagens"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagem"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dip"
                    app:srcCompat="@mipmap/ic_launcher" />
            </TableRow>

            <!-- <android.support.v4.view.ViewPager
                android:id="@+id/fotosSlider"
                android:layout_width="match_parent"
                android:layout_height="187dp">

            </android.support.v4.view.ViewPager>-->

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="ADD" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Salvar Edicao"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>